import Animal.Eagle;
import Animal.Giraffe;
import Animal.Lion;
import Animal.Ungulates;

public class Program {
	
	public static void main(String[] args) throws Exception {
	    Zoo zoo = new Zoo();

	    Cage<Eagle> eagleCage = new Cage<>(2);
        eagleCage.addAnimal(new Eagle());

	    zoo.addCage(eagleCage);
	    zoo.addCage(new Cage<Lion>(1));
	    Cage<Ungulates> ungCage = new Cage<>(1);
	    ungCage.addAnimal(new Giraffe());
	    zoo.addCage(ungCage);
	    eagleCage.addAnimal(new Eagle());

	    System.out.println("Тварин в зоопарку: " + zoo.getCountOfAnimals());
	    System.out.println("Тварин в клiтцi для копитних: " + ungCage.busyCount() + "/" + ungCage.maxCount());
    }

}
